<Window x:Class="TRAI_Surveys.HomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TRAI_Surveys"
        mc:Ignorable="d"
        Title="HomeWindow" Height="300" Width="300">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Button x:Name="btnSurveys" Content="Surveys" HorizontalAlignment="Center" Margin="10" VerticalAlignment="Center" Height="40" Width="250" Click="btnSurveys_Click"/>
            <Button x:Name="btnCallDrops" Content="Call Drops" HorizontalAlignment="Center" Margin="10" VerticalAlignment="Center" Height="40" Width="250"/>
            <Button x:Name="btnSpeedTest" Content="Data Test" HorizontalAlignment="Center" Margin="10" VerticalAlignment="Center" Height="40" Width="250"/>
            <Button x:Name="btnWrong" Content="Wrongly Charged" HorizontalAlignment="Center" Margin="10" VerticalAlignment="Center" Height="40" Width="250"/>
        </StackPanel>
    </Grid>
</Window>
